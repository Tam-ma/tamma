{
  "name": "@tamma/mcp-client",
  "version": "0.1.0",
  "description": "MCP (Model Context Protocol) client for connecting to MCP servers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "import": "./dist/errors.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist .tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@tamma/shared": "workspace:*",
    "@tamma/observability": "workspace:*",
    "zod": "^3.23.0",
    "eventemitter3": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "~5.7.2",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "tools",
    "resources"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/meywd/tamma.git",
    "directory": "packages/mcp-client"
  },
  "license": "MIT"
}
