{
  "name": "@tamma/cost-monitor",
  "version": "0.1.0",
  "type": "module",
  "description": "LLM cost monitoring and reporting for the Tamma platform",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
