{
  "name": "@tamma/doc-review",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build",
    "start": "wrangler dev",
    "typecheck": "tsc --noEmit",
    "deploy": "wrangler deploy",
    "preview": "wrangler dev",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply tamma-docs",
    "db:migrate:local": "wrangler d1 migrations apply tamma-docs --local",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed-database.ts",
    "db:seed:remote": "SEED_REMOTE=true tsx scripts/seed-database.ts",
    "db:reset": "pnpm db:migrate:local && pnpm db:seed",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:unit": "vitest run --grep -i '(integration|e2e)'",
    "test:integration": "vitest run --grep -i 'integration'",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:report": "playwright show-report",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "playwright:install": "playwright install --with-deps",
    "lighthouse": "lhci autorun",
    "lighthouse:install": "npm install -g @lhci/cli@0.14.x"
  },
  "dependencies": {
    "@react-router/cloudflare": "^7.9.5",
    "@react-router/dev": "^7.9.5",
    "@react-router/node": "^7.9.5",
    "dayjs": "^1.11.13",
    "diff": "^7.0.0",
    "drizzle-orm": "^0.44.7",
    "isbot": "^5",
    "lucide-react": "^0.553.0",
    "nanoid": "^5.1.6",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-router": "^7.9.5",
    "rehype-highlight": "^7.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "resend": "^6.4.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251107.0",
    "@playwright/test": "^1.56.1",
    "@types/diff": "^6.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/ui": "^4.0.8",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.18.0",
    "happy-dom": "^20.0.10",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "~5.7.2",
    "vite": "^6.0.7",
    "vitest": "^4.0.8",
    "wrangler": "^4.46.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
