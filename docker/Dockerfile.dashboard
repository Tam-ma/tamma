# ------------------------------------------------------------------
# Dockerfile.dashboard  â€“  Vite React SPA served by nginx
#
# Build from the repo root:
#   docker build -f docker/Dockerfile.dashboard -t tamma-dashboard .
# ------------------------------------------------------------------

# ---- Stage 1: Build ----
FROM node:22-alpine AS build
RUN corepack enable && corepack prepare pnpm@latest --activate
WORKDIR /app

COPY pnpm-lock.yaml pnpm-workspace.yaml package.json ./
COPY packages/dashboard/package.json packages/dashboard/
# Shared types are a build-time dependency of the dashboard
COPY packages/shared/package.json packages/shared/

RUN pnpm install --frozen-lockfile --filter @tamma/dashboard...

COPY tsconfig.json ./
COPY packages/shared packages/shared
COPY packages/dashboard packages/dashboard

RUN pnpm --filter @tamma/dashboard run build

# ---- Stage 2: Runtime (nginx) ----
FROM nginx:1.27-alpine AS runtime
RUN addgroup -g 1001 tamma && adduser -u 1001 -G tamma -s /bin/sh -D tamma

COPY docker/nginx-dashboard.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/packages/dashboard/dist /usr/share/nginx/html

EXPOSE 3001

HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 \
  CMD wget -qO- http://localhost:3001/ || exit 1

CMD ["nginx", "-g", "daemon off;"]
